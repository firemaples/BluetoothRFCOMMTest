<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <Button
        android:id="@+id/bt_setAsServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As server"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_setAsClientWithCompanionPairing" />

    <Button
        android:id="@+id/bt_setAsClientWithCompanionPairing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As client (Companion pairing)"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_setAsServer"
        app:layout_constraintBottom_toTopOf="@id/bt_setAsClientWithBTDiscovery" />

    <Button
        android:id="@+id/bt_setAsClientWithBTDiscovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As client (BT Discovery)"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_setAsClientWithCompanionPairing"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>